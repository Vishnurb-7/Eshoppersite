<section >
    <div class="container">
        <div class="row pb-5">
            <form action="/admin/editData/<%= product._id %>?_method=PUT" method="post" enctype="multipart/form-data">
                
                <div class="d-flex pe-3">
                    <div class="input-group mb-3 pe-3 w-50">
                        <span class="input-group-text" id="inputGroup-sizing-default">Product Name</span>
                        <input name="productName" type="text"  class="form-control" id="productName" value="<%= product
                        .productName %>" required aria-label="Sizing example input"
                            aria-describedby="inputGroup-sizing-default">
                    </div>
                    <div class="input-group mb-3 w-25 ps-3 pe-3">
                        <span class="input-group-text" id="inputGroup-sizing-default">Actual Price</span>
                        <input name="actualPrice" type="number" id="actualPrice" value="<%= product.
                        actualPrice %>" class="form-control" aria-label="Sizing example input"
                            aria-describedby="inputGroup-sizing-default">
                    </div>
                    <div class="input-group mb-3 w-25 ps-3">
                        <span class="input-group-text" id="inputGroup-sizing-default">Selling Price</span>
                        <input name="sellingPrice" type="number" id="sellingPrice" value="<%= product.
                        sellingPrice %>" class="form-control" aria-label="Sizing example input"
                            aria-describedby="inputGroup-sizing-default">
                    </div>
                </div>
                 <div class="d-flex">
                    <div class="input-group mb-3 w-50 ps-0 pe-3">
                        <span class="input-group-text" id="inputGroup-sizing-default">Select Category</span>
                        <select name="categoryName" class="form-select" id="categoryName" aria-label="Default select example">
                            <option selected><%= product.
                                categoryName %></option>
                            <% for(var i=0;i<categoryDetails.length; i++) { %>
                            <option value="<%=categoryDetails[i].newCategory %>"><%= categoryDetails[i].newCategory %></option>
                            <% } %>
                          </select>
                    </div>

                    </div>

                    <div class="form-check w-25 ms-5">
                        <input class="form-check-input" type="checkbox" value="1" id="flexCheckDefault" name="addToTrending">
                        <label class="form-check-label text-dark " for="flexCheckDefault">
                          ADD TO TRENDING LIST
                        </label><br><br>
                        <input class="form-check-input" type="checkbox" value="1" id="flexCheckDefault" name="addToNewlyArrived">
                        <label class="form-check-label text-dark " for="flexCheckDefault">
                          ADD TO NEWLY ARRIVED
                        </label><br><br>
                      </div>
                     
                    
                    <div class="input-group mb-3 w-50 ps-0 pe-3">
                        <span class="input-group-text" id="inputGroup-sizing-default">Select Brand</span>
                        <select name="brandName" class="form-select" aria-label="Default select example">
                            <option selected><%= product.
                                brandName %> </option>
                            <% for(var i=0;i<brandDetails.length; i++) { %>
                            <option value="<%=brandDetails[i].newBrand %>"><%= brandDetails[i].newBrand %></option>
                            <% } %>
                          </select>
                    </div>
                    
                </div>
                <div class="d-flex">
                    <div class="input-group mb-3 pe-3 w-50">
                        <span class="input-group-text" id="inputGroup-sizing-default">Quantity</span>
                        <input name="quantityName" type="number" id="quantityName" value="<%= product.
                        quantityName %>" class="form-control" required aria-label="Sizing example input"
                            aria-describedby="inputGroup-sizing-default">
                    </div>
                              
                </div>

                <div class="d-flex">
                    <div class="input-group mb-3 pe-3">
                        <div class="input-group">
                            <span class="input-group-text" >Product Description</span>
                            <textarea class="form-control" name="productDescription" id="productDescription" aria-label="With textarea"><%= product.productDescription %></textarea>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="" class="form-label">Image</label>
                    <img width="100px" height="100px" src="<%=product.picture %>" alt="Somthing Wrong">
                </div>
            

                <div class="input-group">
                    <input type="file" class="form-control" name="image" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload" >
                    <button class="btn btn-outline-secondary" type="button" id="inputGroupFileAddon04">Button</button>
                </div>
                

                <div class="d-felx justify-content-center mt-3">
                    
                        <input type="submit" value="ADD PRODUCT" class="btn btn-success m-2">
                        <input type="reset" value="RESET ITEM" class="btn btn-info m-2 w-25">
                 
                </div>
                   
            </form>

        </div>
    </div>
</section>