        </span>
        <input
          type="password"
          class="form-control"
          aria-label="Sizing example input"
          aria-describedby="inputGroup-sizing-default"
          
        />
      </div>
      
  
    </div>
  </div>
  <button type="submit" class="btn btn-success">SAVE CHANGES</button>
</form>
</div>


<script>
  function password_Validation(){

    let flag = 0
    let userPassword = document.getElementById("userPassword").value.trim()

    let passwordcheck = /^[a-zA-Z0-9!@#$%^&*]{8,16}$/

    if(passwordcheck.test(userPassword)== ''){
      document.getElementById('userPasswordErrorDetails').innerHTML = ('Password Incorrect')
      flag = 1
    }else{
      document.getElementById('userPasswordErrorDetails').innerHTML = ''
    }

    if(flag == 1){
      return false
    }

  }
</script>


