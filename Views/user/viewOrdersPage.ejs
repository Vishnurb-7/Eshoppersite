<div class="container mt-3">
  <table id="Category" class="table  table-hover">
    <thead>
      <tr>
        <th scope="col">SNO</th>
        <th scope="col">ORDER ID</th>
        <th scope="col">DATE</th>
        <th scope="col">ADDRESS</th>
        <th scope="col">AMOUNT</th>
        <th scope="col">VIEW PRODUCTS</th> 
      </tr>
    </thead>
    <tbody>
    <% for(var i=0;i<orders.length;i++){ %>
      <tr>
        <th scope="row"><%= i+1 %></th>
        <td><%= orders[i]._id %></td>
        <td><%=  orders[i].date.toLocaleDateString() %></td>
        <td><%= orders[i].deliveryDetails.address %></td>
        <td>â‚¹ <%= orders[i].deliveryDetails.totalAmout %></td>
        <td><a href="/viewOrderProducts?id=<%= orders[i]._id %>" class="btn btn-secondary btn-sm">VIEW PRODUCTS</a></td>
      </tr>
      <% }%>
    </tbody>
  </table>
</div>
